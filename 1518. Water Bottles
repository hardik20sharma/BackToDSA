class Solution {
public:
    int numWaterBottles(int numBottles, int numExchange) {
        
        int res = 0, emptyBottles = 0;

        while(numBottles) {
            res += numBottles;
            emptyBottles += numBottles;
            numBottles = emptyBottles / numExchange;
            emptyBottles = emptyBottles % numExchange;
        }

        return res;
    }
};
