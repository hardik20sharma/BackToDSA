class Solution {

public:
    int findNumberOfLIS(vector<int>& nums) {

        int n = nums.size();
        vector<int> dp(n, 1);
        vector<int> cnt(n, 1);

        for(int i = 1; i < n; i++)
            for(int prev = 0; prev < i; prev++)
                if(nums[prev] < nums[i] && dp[i] < 1 + dp[prev]) {
                    dp[i] = 1 + dp[prev];
                    cnt[i] = cnt[prev];
                }
                else if(nums[prev] < nums[i] && dp[prev] + 1 == dp[i]) {
                    cnt[i] += cnt[prev];
                }

        int maxLenLIS = *max_element(dp.begin(), dp.end());

        int res = 0;

        for(int i = 0; i < n; i++)
            if(maxLenLIS == dp[i])
                res += cnt[i];

        return res;
    }
};
