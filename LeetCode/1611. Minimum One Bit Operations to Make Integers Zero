class Solution {

public:

    int minimumOneBitOperations(int n) {

        if (n == 0)
            return 0;

        int powerOfTwoGreaterThanN = 0;

        // Find smallest power of two greater than n
        while (powerOfTwoGreaterThanN < 30 && pow(2, powerOfTwoGreaterThanN) <= n) {
            powerOfTwoGreaterThanN++;
        }

        int highestPowerOfTwo = pow(2, powerOfTwoGreaterThanN - 1);

        int leftOverNumber = n ^ highestPowerOfTwo;     // Removing the left-most 1 bit from n

        int res = pow(2, powerOfTwoGreaterThanN) - 1;   // Result of nums which are perfect power of 2

        return res - minimumOneBitOperations(leftOverNumber);
    }

};

