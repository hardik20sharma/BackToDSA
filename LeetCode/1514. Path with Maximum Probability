#define pdi pair<double, int>
class Solution {
public:
    double maxProbability(int n, vector<vector<int>>& edges, vector<double>& succProb, int start, int end) {
        
        // Build the graph first
        vector<vector<pdi>> graph(n);

        for(int i = 0; i < edges.size(); i++) {
            
            int a = edges[i][0], b = edges[i][1];
            double prob = succProb[i];
            
            graph[a].push_back( {prob, b} );
            graph[b].push_back( {prob, a} );
        }

        // Store which nodes are dist
        vector<double> dist(n, -1.0);
        dist[start] = 1.0;

        // Traverse the graph using bfs
        priority_queue<pdi> pq;
        pq.push( {1.0, start} );

        while(!pq.empty()) {
            
            int currNode = pq.top().second;
            double currProb = pq.top().first;
            pq.pop();

            for(auto nxt : graph[currNode]) {
                
                int nxtNode = nxt.second;
                double nxtProb = nxt.first;

                if(dist[nxtNode] < currProb * nxtProb) {
                    dist[nxtNode] = currProb * nxtProb;
                    pq.push( { dist[nxtNode], nxtNode } );
                }
            }
        }

        if(dist[end] == -1.0)
            return 0.0;

        return dist[end];
    }
};
