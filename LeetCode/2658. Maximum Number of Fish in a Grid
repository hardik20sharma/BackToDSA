class Solution {

    int m;
    int n;

    int dfs(vector<vector<int>> &grid, int x, int y) {

        if(x < 0 || m <= x || y < 0 || n <= y)
            return 0;

        if(grid[x][y] == 0)
            return 0;

        int curr = grid[x][y];
        grid[x][y] = 0;

        return curr + dfs(grid, x+1, y) + dfs(grid, x-1, y) + dfs(grid, x, y+1) + dfs(grid, x, y-1);
    }

public:
    int findMaxFish(vector<vector<int>>& grid) {
        
        m = grid.size();
        n = grid[0].size();

        int res = 0;

        for(int i = 0; i < m; i++)
            for(int j = 0; j < n; j++)
                res = max(res, dfs(grid, i, j));

        return res;
    }
};
