class Solution {

private:
    
    void generateSubsets(vector<int> &nums, int idx, vector<int> &curr, vector<vector<int>> &res) {
        
        if (idx == nums.size()) {
            res.push_back(curr);
            return;
        }

        curr.push_back(nums[idx]);
        generateSubsets(nums, idx + 1, curr, res);
        
        curr.pop_back();
        generateSubsets(nums, idx + 1, curr, res);
    }

public:
    
    vector<vector<int>> subsets(vector<int> &nums) {
        
        vector<vector<int>> res;
        vector<int> curr;
        
        generateSubsets(nums, 0, curr, res);
        
        return res;
    }

};
