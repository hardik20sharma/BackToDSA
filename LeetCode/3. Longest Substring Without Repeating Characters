class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        
        unordered_map<char, int> mp;
        int left = 0, right = 0;
        int res = 0;

        while(right < s.size()) {

            mp[s[right]]++;
            right++;

            while(mp.size() < right - left) {
                mp[s[left]]--;
                if(mp[s[left]] == 0)
                    mp.erase(s[left]);
                left++;
            }

            res = max(res, right - left);
        }

        return res;
    }
};
